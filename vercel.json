{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/movies",
      "dest": "api/index.py"
    },
    {
      "src": "/api/similarity/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/templates/index.html"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
